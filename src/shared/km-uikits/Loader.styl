$big-size = 50px
$small-size = 18px
$border-size = 5px
$small-border-size = 3px

$duration = 1000ms

@keyframes spinAround
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.loader
  display flex
  justify-content center
  align-items center
  flex-direction column

  &:before
    display block
    margin 10px
    width $big-size
    height $big-size
    border $border-size solid #f4f4f5
    border-top-color #6c6e7e
    border-radius 50%
    content ''
    animation spinAround $duration infinite linear
    pointer-events none

  &.\\--small &
    &:before
      margin 0
      width $small-size
      height $small-size
      border-width $small-border-size

  &__message
    text-align center
    margin-top 20px